<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="70dp"
    android:background="@drawable/scrolling_background">


    <ImageView
        android:id="@+id/scrolling_item_icon"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginStart="5dp"
        android:layout_marginTop="5dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/scrolling_item_title"
        android:layout_width="wrap_content"
        android:layout_height="25dp"
        android:layout_marginTop="5dp"
        android:ellipsize="end"
        android:lines="1"
        android:paddingStart="5dp"
        android:paddingEnd="60dp"
        android:text="Title"
        android:textSize="16dp"
        app:layout_constraintLeft_toRightOf="@id/scrolling_item_icon"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/scrolling_item_content"
        android:layout_width="wrap_content"
        android:layout_height="25dp"
        android:ellipsize="end"
        android:lines="1"
        android:paddingStart="5dp"
        android:paddingEnd="60dp"
        android:text="Content"
        android:textColor="@android:color/darker_gray"
        android:textSize="14dp"
        app:layout_constraintLeft_toRightOf="@id/scrolling_item_icon"
        app:layout_constraintTop_toBottomOf="@id/scrolling_item_title" />
</android.support.constraint.ConstraintLayout>