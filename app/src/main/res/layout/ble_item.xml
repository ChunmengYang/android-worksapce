<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/scrolling_item_background"
    android:paddingBottom="15dp">

    <TextView
        android:id="@+id/ble_item_name"
        android:layout_width="wrap_content"
        android:layout_height="25dp"
        android:layout_marginTop="15dp"
        android:ellipsize="end"
        android:lines="1"
        android:paddingStart="15dp"
        android:text="Address"
        android:textSize="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/ble_item_address"
        android:layout_width="wrap_content"
        android:layout_height="25dp"
        android:layout_marginTop="5dp"
        android:ellipsize="end"
        android:lines="1"
        android:paddingStart="15dp"
        android:text="Address"
        android:textSize="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/ble_item_name" />

    <TextView
        android:id="@+id/ble_item_rssi"
        android:layout_width="wrap_content"
        android:layout_height="25dp"
        android:layout_marginTop="5dp"
        android:ellipsize="end"
        android:lines="1"
        android:paddingStart="15dp"
        android:text="Address"
        android:textSize="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/ble_item_address" />

</android.support.constraint.ConstraintLayout>